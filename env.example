# ===========================================
# AUTOLANKA ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://autolanka:password@localhost:5432/autolanka_dev"

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis connection string for caching and session storage
# Format: redis://username:password@host:port/database
REDIS_URL="redis://localhost:6379"

# ===========================================
# S3/MINIO OBJECT STORAGE
# ===========================================
# MinIO endpoint (for local development) or AWS S3 endpoint
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="autolanka"
S3_SECRET_KEY="autolanka_dev_password"
S3_BUCKET="autolanka-dev"
S3_REGION="us-east-1"

# ===========================================
# AUTHENTICATION (CLERK)
# ===========================================
# Clerk authentication service configuration
# Get these from https://dashboard.clerk.com/
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key_here"
CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key_here"
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key_here"

# ===========================================
# PAYMENT PROCESSING (STRIPE)
# ===========================================
# Stripe payment processing configuration
# Get these from https://dashboard.stripe.com/
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# ===========================================
# AI SERVICES (OPENAI)
# ===========================================
# OpenAI API configuration for AI-powered features
# Get this from https://platform.openai.com/
OPENAI_API_KEY="sk-your_openai_api_key_here"

# ===========================================
# SOCIAL MEDIA API INTEGRATIONS
# ===========================================
# Instagram Business API
INSTAGRAM_CLIENT_ID="your_instagram_client_id_here"
INSTAGRAM_CLIENT_SECRET="your_instagram_client_secret_here"

# YouTube Data API
YOUTUBE_CLIENT_ID="your_youtube_client_id_here"
YOUTUBE_CLIENT_SECRET="your_youtube_client_secret_here"

# Facebook Graph API
FACEBOOK_APP_ID="your_facebook_app_id_here"
FACEBOOK_APP_SECRET="your_facebook_app_secret_here"

# Twitter API v2
TWITTER_API_KEY="your_twitter_api_key_here"
TWITTER_API_SECRET="your_twitter_api_secret_here"
TWITTER_ACCESS_TOKEN="your_twitter_access_token_here"
TWITTER_ACCESS_TOKEN_SECRET="your_twitter_access_token_secret_here"

# LinkedIn API
LINKEDIN_CLIENT_ID="your_linkedin_client_id_here"
LINKEDIN_CLIENT_SECRET="your_linkedin_client_secret_here"

# TikTok API
TIKTOK_CLIENT_KEY="your_tiktok_client_key_here"
TIKTOK_CLIENT_SECRET="your_tiktok_client_secret_here"

# ===========================================
# GOOGLE APIS
# ===========================================
# Google Drive API for media ingestion
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# ===========================================
# APPLICATION URLS
# ===========================================
# Frontend and backend application URLs
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Application environment (development, staging, production)
NODE_ENV="development"
ENVIRONMENT="development"

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Logging level (error, warn, info, debug)
LOG_LEVEL="info"

# ===========================================
# WORKER CONFIGURATION
# ===========================================
# Background job processing
WORKER_MODE="false"
WORKER_CONCURRENCY="5"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features
ENABLE_BILLING="true"
ENABLE_ML_SERVICE="true"
ENABLE_WORKFLOW_MARKETPLACE="true"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT secret for API authentication
JWT_SECRET="your_jwt_secret_key_here"

# Encryption key for sensitive data
ENCRYPTION_KEY="your_32_character_encryption_key_here"

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP configuration for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password_here"
SMTP_FROM="noreply@autolanka.com"

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Prometheus metrics endpoint
PROMETHEUS_ENDPOINT="http://localhost:9090"

# Grafana dashboard URL
GRAFANA_URL="http://localhost:3001"

# ===========================================
# RATE LIMITING
# ===========================================
# API rate limiting configuration
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE="104857600"

# Allowed file types
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,video/avi,audio/mp3,audio/wav"

# ===========================================
# EXTERNAL SERVICE ENDPOINTS
# ===========================================
# ML Service endpoint
ML_SERVICE_URL="http://localhost:8001"

# Webhook endpoints
WEBHOOK_BASE_URL="https://your-domain.com/webhooks"

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug mode
DEBUG="false"

# Enable request logging
ENABLE_REQUEST_LOGGING="true"

# Enable CORS for development
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# SSL/TLS configuration
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/private.key"

# CDN configuration
CDN_URL="https://cdn.your-domain.com"

# Backup configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# ===========================================
# INTEGRATION TESTING
# ===========================================
# Test database URL (for running tests)
TEST_DATABASE_URL="postgresql://autolanka:password@localhost:5432/autolanka_test"

# Test Redis URL
TEST_REDIS_URL="redis://localhost:6379/1"

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Docker configuration
DOCKER_REGISTRY="your-registry.com"
DOCKER_IMAGE_TAG="latest"

# Kubernetes configuration
KUBERNETES_NAMESPACE="autolanka"
KUBERNETES_CLUSTER="production"

# ===========================================
# BACKUP & RECOVERY
# ===========================================
# AWS S3 backup configuration
BACKUP_S3_BUCKET="autolanka-backups"
BACKUP_S3_REGION="us-east-1"
BACKUP_S3_ACCESS_KEY="your_backup_s3_access_key"
BACKUP_S3_SECRET_KEY="your_backup_s3_secret_key"

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Slack integration
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/webhook/url"

# Discord integration
DISCORD_BOT_TOKEN="your_discord_bot_token"
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your/webhook/url"

# Zapier integration
ZAPIER_WEBHOOK_URL="https://hooks.zapier.com/hooks/catch/your/webhook/url"

# ===========================================
# NOTIFICATION SERVICES
# ===========================================
# Push notification service (FCM)
FCM_SERVER_KEY="your_fcm_server_key_here"

# SMS service (Twilio)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
# Google Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX-X"

# Mixpanel analytics
MIXPANEL_TOKEN="your_mixpanel_token"

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Cache TTL settings (in seconds)
CACHE_TTL_SHORT="300"
CACHE_TTL_MEDIUM="1800"
CACHE_TTL_LONG="3600"

# Cache key prefixes
CACHE_PREFIX_USER="user:"
CACHE_PREFIX_ORG="org:"
CACHE_PREFIX_MEDIA="media:"
CACHE_PREFIX_WORKFLOW="workflow:"

# ===========================================
# QUEUE CONFIGURATION
# ===========================================
# Bull queue configuration
QUEUE_REDIS_URL="redis://localhost:6379"
QUEUE_CONCURRENCY="5"
QUEUE_RETRY_ATTEMPTS="3"
QUEUE_RETRY_DELAY="5000"

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
# Webhook signature verification
WEBHOOK_SECRET="your_webhook_secret_key"

# Webhook timeout (in milliseconds)
WEBHOOK_TIMEOUT="30000"

# ===========================================
# PERFORMANCE MONITORING
# ===========================================
# New Relic monitoring
NEW_RELIC_LICENSE_KEY="your_new_relic_license_key"

# Sentry error tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ===========================================
# SECURITY HEADERS
# ===========================================
# Content Security Policy
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"

# HSTS configuration
HSTS_MAX_AGE="31536000"
HSTS_INCLUDE_SUBDOMAINS="true"

# ===========================================
# API DOCUMENTATION
# ===========================================
# Swagger/OpenAPI configuration
API_DOCS_ENABLED="true"
API_DOCS_PATH="/api/docs"

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
# Health check endpoints
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PATH="/health"
HEALTH_CHECK_INTERVAL="30000"

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable API mocking
ENABLE_API_MOCKING="false"

# Enable database seeding
ENABLE_DB_SEEDING="false"

# Enable performance profiling
ENABLE_PROFILING="false"

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================
# Add your custom environment variables here
# CUSTOM_VARIABLE="custom_value"
